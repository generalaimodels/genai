# Terminal Service Environment Configuration

#############################################
# Redis Configuration
#############################################
REDIS_CLUSTER_URLS=["redis://localhost:6379"]
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
SESSION_TTL_SECONDS=3600
OUTPUT_BUFFER_SIZE=1500

#############################################
# OAuth2 & JWT Authentication
#############################################
OAUTH2_ISSUER_URL=https://your-auth-server.com
OAUTH2_AUDIENCE=terminal-service
JWT_ALGORITHM=RS256
JWT_PUBLIC_KEY_PATH=/path/to/public_key.pem

#############################################
# Performance Tuning
#############################################
MAX_CONCURRENT_SESSIONS_PER_USER=10
PTY_BUFFER_SIZE=16384
WEBSOCKET_MAX_MESSAGE_SIZE=65536
WEBSOCKET_PING_INTERVAL=15.0
WEBSOCKET_PING_TIMEOUT=3.0

#############################################
# Flow Control
#############################################
FLOW_CONTROL_WINDOW_SIZE=262144
FLOW_CONTROL_PAUSE_THRESHOLD=0.8

#############################################
# Observability
#############################################
OTEL_EXPORTER_ENDPOINT=http://jaeger:4317
OTEL_SERVICE_NAME=terminal-service
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO

#############################################
# Server Configuration
#############################################
HOST=0.0.0.0
PORT=8080
GRPC_PORT=50051
WORKERS=1
